<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/selftest_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center|left"
            android:background="@drawable/shape_gradient"
            android:src="@drawable/arrow_right" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:gravity="center"
            android:layout_gravity="center|left"
            android:background="@drawable/shape_gradient"
            android:textSize="20dp"
            android:text="@string/selftest"/>
    </LinearLayout>
    <TextView
        android:id="@+id/selftest_word_forecast"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"/>
    <TextView
        android:id="@+id/selftest_words"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/selftest_means"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000000"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3 ">
        <Button
            android:id="@+id/selftest_remember"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/shape_gradient"
            android:textSize="20dp"
            android:text="@string/remember"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/selftest_forget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/shape_gradient"
            android:textSize="20dp"
            android:text="@string/forget"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3 ">
        <Button
            android:id="@+id/selftest_previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/shape_gradient"
            android:textSize="20dp"
            android:text="@string/per_word"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/selftest_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/shape_gradient"
            android:textSize="20dp"
            android:text="@string/next_word"/>
    </LinearLayout>
</LinearLayout>