<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReviewPage.ChooseInChineseActivity"
    android:background="#EDEDED">
    <!--因为中文选词英文全译字段过长，所以以下id前缀全部由“choose_in_chinese_”
        缩写为“cic_”-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cic_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center|start"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient"
            android:src="@drawable/arrow_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center|start"
            android:layout_weight="10"
            android:background="@drawable/shape_gradient"
            android:gravity="center"
            android:text="@string/chooseinchinese"
            android:textColor="#fff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/cic_finished"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/cic_surplus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cic_mean"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/cic_right_word"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cic_word_A"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/cic_button_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#424242"
        android:textSize="25sp" />

    <Button
        android:id="@+id/cic_word_B"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cic_button_bg"
        android:textColor="#424242"
        android:textSize="25sp" />

    <Button
        android:id="@+id/cic_word_C"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cic_button_bg"
        android:textColor="#424242"
        android:textSize="25sp" />

    <Button
        android:id="@+id/cic_word_D"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cic_button_bg"
        android:textColor="#424242"
        android:textSize="25sp" />

</LinearLayout>